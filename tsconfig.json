{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    
    // --- START of ADDED LINES TO FIX @/ ERRORS ---
    "baseUrl": ".", // Defines the root for path mapping to the project root
    "paths": {
      // Maps the '@/...' alias to the 'src/...' directory, resolving all module not found errors.
      "@/*": ["./src/*"] 
    },
    // --- END of ADDED LINES TO FIX @/ ERRORS ---
    
    // --- MOVED STRAY PROPERTIES BACK INSIDE COMPILER OPTIONS ---
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "incremental": true,
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
    // --- END of COMPILER OPTIONS BLOCK ---
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}